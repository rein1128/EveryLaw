<% if @contact.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @contact.errors.full_messages.each do |contact| %>
        <li><%= contact %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div style="margin: 50px 100px">
	<h1>問い合わせ</h1>
	<h4>返信はこれからご記入いただくメールアドレスにいたします</h4>
	<div style="padding-left: 50px">
		<%= form_for(@contact) do |f| %>

            <h3>メールアドレス</h3>
            <%= f.email_field :address, size: "150x5" %>

		    <h3>タイトル</h3>
		    <%= f.text_field :title, size: "150x5" %>

		    <h3>問い合わせ内容</h3>
		    <%= f.text_area :body, size: "150x10" %>

		    <p><%= f.submit '完了', class: 'btn btn-primary btn-lg' %></p>

		<% end %>
	</div>
</div>

