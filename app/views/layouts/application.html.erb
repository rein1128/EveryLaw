<!DOCTYPE html>
<html>
  <head>
    <title>EveryLaw</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container-fluid" style="border-bottom: 1px solid black; margin-top: 20px; font-size: 30px">
      <% if user_signed_in? %>
        <div style="margin-left: 120px; display: inline-block">
          <%= image_tag "logo.png", size: "160x120" %>
        </div>
        <div style="margin-left: 120px; display: inline-block">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "質問一覧", questions_path %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "新規質問", new_question_path %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "マイページ", user_path(current_user.id) %>
        </div>
        <div style="text-align: center; padding-bottom: 20px">
          <%= search_form_for @q do |f| %>
          <%= f.label :"タイトル検索" %>
          <%= f.search_field :title_cont %>
          <%= f.submit %>
          <% end %>
        </div>
      <% else %>
        <div style="margin-left: 120px; display: inline-block">
          <%= image_tag "logo.png", size: "160x120" %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "会員登録", new_user_registration_path %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "ログイン", new_user_session_path %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "質問一覧", questions_path %>
        </div>
        <div style="margin-left: 100px; display: inline-block">
          <%= link_to "about", user_about_path %>
        </div>
        <div>
          <div style="text-align: center; padding-bottom: 20px">
            <%= search_form_for @q do |f| %>
            <%= f.label :"タイトル検索" %>
            <%= f.search_field :title_cont %>
            <%= f.submit %>
            <% end %>
          </div>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
